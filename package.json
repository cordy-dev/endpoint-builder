{
    "name": "@cordy/endpoint-builder",
    "version": "1.7.0",
    "description": "A flexible TypeScript library for building REST API endpoints with full type safety",
    "type": "module",
    "license": "MIT",
    "homepage": "https://github.com/cordy-dev/endpoint-builder#readme",
    "bugs": {
        "url": "https://github.com/cordy-dev/endpoint-builder/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cordy-dev/endpoint-builder.git"
    },
    "author": "Anton Ryuben <developer@myraxbyte.dev>",
    "files": [
        "dist"
    ],
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        },
        "./auth": {
            "types": "./dist/auth/index.d.ts",
            "import": "./dist/auth/index.js",
            "default": "./dist/auth/index.js"
        },
        "./storage": {
            "types": "./dist/storage/index.d.ts",
            "import": "./dist/storage/index.js",
            "default": "./dist/storage/index.js"
        },
        "./retry": {
            "types": "./dist/retry/index.d.ts",
            "import": "./dist/retry/index.js",
            "default": "./dist/retry/index.js"
        },
        "./package.json": "./package.json"
    },
    "sideEffects": false,
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "lint:check": "npm run lint",
        "build": "tsdown",
        "dev": "tsdown --watch",
        "test": "vitest run --reporter=verbose",
        "typecheck": "tsc --noEmit",
        "release": "bumpp && npm publish",
        "prepublishOnly": "npm run build",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "lint-staged": "lint-staged"
    },
    "devDependencies": {
        "@eslint/css": "^0.14.1",
        "@eslint/eslintrc": "^3.3.3",
        "@eslint/js": "^9.39.1",
        "@eslint/json": "^0.14.0",
        "@types/node": "^24.10.1",
        "@vitest/coverage-v8": "^4.0.15",
        "bumpp": "^10.3.2",
        "eslint": "^9.39.1",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-unused-imports": "^4.3.0",
        "globals": "^16.5.0",
        "lint-staged": "^16.2.7",
        "simple-git-hooks": "^2.13.1",
        "tsdown": "^0.16.8",
        "tsx": "^4.21.0",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.48.1",
        "vitest": "^4.0.15"
    },
    "simple-git-hooks": {
        "pre-commit": "npm run lint-staged"
    },
    "lint-staged": {
        "*": "npm run lint:fix"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "keywords": [
        "typescript",
        "api",
        "endpoint",
        "builder",
        "rest",
        "http"
    ]
}